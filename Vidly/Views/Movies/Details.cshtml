@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>

    <li>Genre: @Model.Genre.GenreType</li>
    <li>Release Date: @Convert.ToDateTime(@Model.MovieReleaseDate.Value).ToLongDateString()</li>
    <li>Date Added: @Convert.ToDateTime(@Model.DateAddedTOCollection).ToLongDateString()</li>
    <li>Number In Stock: @Model.NumberInStocks</li>
</ul>